<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <% if post.avatar.present? %>
    <p>
      <strong>Avatar:</strong>
      <%= image_tag(post.avatar.url, width: 50, height: 50) %>
    </p>
  <% end %>

</div>
